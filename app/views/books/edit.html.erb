    <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>

    <div class="title">
      <strong>Title:</strong>
      <%= @book.title %>
    </div>

    <div class="title box">
      <%= f.text_area :title %>
    </div>

    <div class="body">
      <strong>Body:</strong>
      <%= @book.body %>
    </div>

    <div class="body box">
      <%= f.text_area :body %>
    </div>

    <div class="update">
      <%= f.submit 'Update Book' %>
    </div>

    <div class="action">
      <span>
        <%=link_to 'Show', book_path(@book) %>
        <%=link_to 'Back', books_path %>
      </span>
    </div>
    <% end %>